
<link rel="stylesheet" href="/css/home.css">
<h1>Social Network/<%= title%></h1>

<section>
    <h4>
        Posts
    </h4>
    <%if(locals.user){%>
    <form action="/posts/create-post" id="new-post-form" method="post">
        <textarea name="content" id="" cols="30" rows="5" placeholder="Type here ..."></textarea>
        <button type="submit">Post</button>
    </form>
    <%}%>
</section>

<section>
    <h4>Feed</h4>

    <div>
        <ul>
            <%for(let i of posts_feed){%>
                <li>
                    <p><%= i.content%></p>
                    <small>
                        <%= i.user.name%>
                    </small>
                </li>
            <%}%>
        </ul>
    </div>


</section>

